{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "overrides": [
    {
      "files": [
        "*.tsx",
        "*.ts"
      ],
      "extends": [
        "plugin:@typescript-eslint/recommended",
        "prettier"
      ]
    }
  ]
}
